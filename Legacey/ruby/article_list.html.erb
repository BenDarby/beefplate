<div id="main-content">
  <%= component(@node, 'hero_slot_0') %>
  <h1><%=h @node.title %></h1>
  <%= link_to "RSS", node_path(@node, :rss), :title => "RSS Feed", :class => "rss" %>
  <div id="body">
    <%= paginated_articles do |articles| %>
      <ul id="articles">
        <% for article in articles %>
          <li>
            <%= image_tag( article.asset.url('100x100', :jpg), :alt => article.asset.description.to_s ) unless article.asset.nil? %>
            <h2><%= link_to article.title, node_path(article) %></h2>
            <p><%= truncate(article.description, :length => 140) %></p>
            <p class="meta">
              Posted on: <span class="date"><%= l article.published_at, :format => :short_dot %></span>
              <% unless @node == article.parent %>
              <span class="category">Category: <%= link_to h( article.parent.title ), node_path(article.parent) %></span>
              <% end -%>
            </p>
          </li>
        <% end %>
      </ul>
    <% end -%>
  </div>
  <%= component(@node, 'wide_slot_0') %>
  <%= component(@node, 'wide_slot_1') %>
  <%= component(@node, 'wide_slot_2') %>
</div>

<div id="supporting-content">
  <h2 class="hidden">Supporting Content</h2>
  <h3 class="hidden">Sub Navigation</h3>
  <%= render 'shared/tree_nav' %>
</div>

<div id="supplementary-content">
  <h2 class="hidden">Supplementary Content</h2>
</div>